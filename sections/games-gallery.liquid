{% style %}
.games-list {
padding-inline-start: 0;
list-style: none;
margin-left: auto;
margin-right: auto;
display: grid;
grid-template-columns: 1fr 1fr;
width: 90vw;
gap: 1rem;
margin-bottom: 5rem;
}
.all-games-card {
display: flex;
flex-direction: row;
flex-wrap: wrap;
align-items: center;
padding: 1rem 0;
width: 100%;
aspect-ratio: 4/3;
margin-left: auto;
margin-right: auto;
background: #fafafe;
border-radius: 15px;
box-shadow: 5px 5px 35px #9999b9;
justify-content: space-around;
}
.all-games-link {
font-size: 5rem;
line-height: 4rem;
font-family: Abel, sans-serif;
font-weight: 600;
text-decoration: none;
color: #010101;
display: flex;
flex-direction: column;
align-items: center;
justify-items: center;
}
.all-games-link:hover {
text-shadow: #2199E2 1px 1px 25px;
}
@media only screen and (min-width: 600px) {
.games-list {
grid-template-columns: 1fr 1fr 1fr;
}
.all-games-link {
font-size: 7rem;
line-height: 5rem;
}
}
{% endstyle %}

<ul class="games-list">
  <li class="games-list-item">
    <div class="all-games-card">
      <a href="/collections/all-games" class="all-games-link"><span>All </span><span> Games</span></a>
    </div>
  </li>
  {% for game in shop.metaobjects.game.values %}

  <li class="games-list-item">
    {% render 'game-card' with game: game %}
  </li>

  {% endfor %}
</ul>

{% schema %}
{
  "name": "Games Gallery",
  "tag": "section",
  "class": "section",
"presets": [
      {
        "name": "custom-text",
      }
    ]
}
{% endschema %}
